# OpenAI API Configuration
OPENAI_API_KEY=your-api-key-here

# LLM Model Settings
LLM_MODEL=gpt-4o-mini

# Dictation Mode: "email" or "message"
# email = professional, complete sentences, nice punctuation/paragraphs
# message = casual, short, conversational
MODE=email

# Auto-paste into focused application
# Requires Accessibility permission when enabled
AUTO_PASTE=false

# Whisper.cpp Configuration
WHISPER_BIN=whisper-cli
WHISPER_MODEL_PATH=~/models/whisper/ggml-base.en.bin

# Push-to-talk Key
# Options: alt_r, f18, or other pynput key names
PTT_KEY=alt_r
