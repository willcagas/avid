<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.user.aidictation</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/path/to/ai-dictation/scripts/run.sh</string>
    </array>
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>KeepAlive</key>
    <false/>
    
    <key>WorkingDirectory</key>
    <string>/path/to/ai-dictation</string>
    
    <key>StandardOutPath</key>
    <string>/tmp/aidictation.out.log</string>
    
    <key>StandardErrorPath</key>
    <string>/tmp/aidictation.err.log</string>
    
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/opt/homebrew/bin</string>
    </dict>
</dict>
</plist>
